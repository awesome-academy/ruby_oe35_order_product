<!-- top-header -->
<% if logged_in? %>
  <div class="agile-main-top">
    <div class="container-fluid">
      <div class="row main-top-w3l py-2">
        <div class="col-lg-2 header-most-top">
          <p class="text-white text-lg-left text-center">
            <%= t ".best_deal" %>
            <i class="fas fa-shopping-cart ml-1"></i>
          </p>
        </div>
        <div class="col-lg-10 header-right mt-lg-0 mt-2">
          <!-- header lists -->
          <ul>
            <li class="text-center border-right text-white">
              <i class="fas fa-phone mr-2"></i>
              <%= t ".phone_number" %>
            </li>
            <li class="text-center border-right text-white">
              <%= link_to t(".profile"), current_user, class: "text-white",
							data_target:"#exampleModal", data_toggle: "modal" %>
            </li>
            <li class="text-center border-right text-white">
              <%= link_to t(".log_out"), logout_path, method: :delete,
              class: "text-white", data_target:"#exampleModal",
              data_toggle: "modal" %>
            </li>
            <li class="text-center border-right text-white">
              <%= link_to t(".en"), locale:"en", class: "text-white" %>
            </li>
            <li class="text-center text-white">
              <%= link_to t(".vi"), locale:"vi" %>
            </li>
          </ul>
          <!-- //header lists -->
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="agile-main-top">
    <div class="container-fluid">
      <div class="row main-top-w3l py-2">
        <div class="col-lg-2 header-most-top">
          <p class="text-white text-lg-left text-center">
            <%= t ".best_deal" %>
            <i class="fas fa-shopping-cart ml-1"></i>
          </p>
        </div>
        <div class="col-lg-10 header-right mt-lg-0 mt-2">
          <!-- header lists -->
          <ul>
            <li class="text-center border-right text-white">
              <i class="fas fa-phone mr-2"></i>
              <%= t ".phone_number" %>
            </li>
            <li class="text-center border-right text-white">
              <%= link_to t(".log_in"), login_path, class: "text-white",
							data_target:"#exampleModal", data_toggle: "modal" %>
            </li>
            <li class="text-center text-white border-right">
              <%= link_to t(".register"), signup_path, class: "text-white",
							data_target:"#exampleModal", data_toggle: "modal" %>
            </li>
            <li class="text-center border-right text-white">
              <%= link_to t(".en"), locale:"en", class: "text-white", data_target:"#exampleModal",
              data_toggle: "modal" %>
            </li>
            <li class="text-center text-white">
              <%= link_to t(".vi"), locale:"vi" %>
            </li>
          </ul>
          <!-- //header lists -->
        </div>
      </div>
    </div>
  </div>
<% end %>
<!-- //top-header -->
<!-- header-bottom-->
<div class="header-bot">
  <div class="container">
    <div class="row header-bot_inner_wthreeinfo_header_mid">
      <!-- logo -->
      <div class="col-md-3 logo_agile">
        <h1 class="text-center">
          <%= link_to root_path, class: "font-weight-bold font-italic" do %>
            <%= image_tag "logo2.png" %>
            <%= t ".electro_store" %>
          <% end %>
        </h1>
      </div>
      <!-- //logo -->
      <!-- header-bot -->
      <div class="col-md-9 header mt-4 mb-md-0 mb-4">
        <div class="row">
          <!-- search -->
          <div class="col-10 agileits_search">
            <%= form_for "#", class: "form-inline" do |f| %>
              <%= f.search_field :email, class: "form-control mr-sm-2",
										placeholder: t(".search") %>
              <%= f.submit t(".search"), class: "btn my-2 my-sm-0" %>
            <% end %>
          </div>
          <!-- //search -->
          <!-- cart details -->
          <div class="col-2 top_nav_right text-center mt-sm-0 mt-2">
            <div class="wthreecartaits wthreecartaits2 cart cart box_1">
              <form action="#" method="post" class="last">
                <input type="hidden" name="cmd" value="_cart">
                <input type="hidden" name="display" value="1">
                <button class="btn w3view-cart" type="submit" name="submit" value="">
                  <i class="fas fa-cart-arrow-down"></i>
                </button>
              </form>
            </div>
          </div>
          <!-- //cart details -->
        </div>
      </div>
    </div>
  </div>
</div>

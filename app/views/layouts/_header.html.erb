          </div>
          <div class="form-group">
            <%= f.label :password, t(".password") %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit t(".register"), class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
